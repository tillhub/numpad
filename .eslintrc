{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "prettier",
    "prettier/react"
  ],
  "env": {
    "es6": true,
    "jest": true
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": 0,
    "react/jsx-boolean-value": 0,
    "no-unused-vars": 1,
    "prettier/prettier": [
      "warn",
      {
        "semi": false,
        "singleQuote": true
      }
    ]
  }
}
